  "devDependencies": {
    "@rogal/front-linter": "3.0.0-beta.9",
    "@testing-library/jest-dom": "5.11.9",
    "@testing-library/react": "11.2.5",
    "@types/jest": "26.0.20",
    "@types/node": "14.14.26",
    "babel-loader": "8.2.2",
    "coveralls": "3.1.0",
    "eslint-import-resolver-typescript": "2.3.0",
    "husky": "4.3.8",
    "jest": "26.6.3",
    "lint-staged": "10.5.4",
