{
  "name": "@rogal/http-client",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "files": [
    "dist"
  ],
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "rollup -c rollup.config.ts",
    "build": "rm -rf dist && rollup -c rollup.config.ts",
    "watch": "rollup -c rollup.config.ts -w",
    "lint:js": "front-linter js  -- --presets=javascript",
    "lint:ts": "front-linter js  -- --presets=typescript",
    "lint": "npm run lint:js && npm run lint:ts",
    "test": "jest --coverage",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "test:watch": "jest --watchAll --coverage",
    "release:prepare": "shipjs prepare",
    "release:trigger": "shipjs trigger"
  },
  "keywords": [],
  "author": "Gabriel Garc√≠a Seco",
  "license": "MIT",
  "dependencies": {
    "axios": "0.27.2"
  },
  "devDependencies": {
    "@rogal/front-linter": "4.0.0-beta.6",
    "@testing-library/jest-dom": "5.16.4",
    "@testing-library/react": "11.2.7",
    "@types/jest": "26.0.24",
    "@types/node": "14.18.20",
    "babel-loader": "8.2.5",
    "coveralls": "3.1.1",
    "eslint-import-resolver-typescript": "2.7.1",
    "husky": "4.3.8",
    "jest": "27.5.1",
    "lint-staged": "11.2.6",
    "msw": "0.42.0",
    "rollup": "2.75.5",
    "rollup-plugin-typescript2": "0.31.2",
    "shipjs": "0.24.4",
    "ts-jest": "27.1.5",
    "typescript": "4.3.5"
  },
  "eslintConfig": {
    "extends": [
      "./node_modules/@rogal/front-linter/eslint.js"
    ]
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "npm run lint:js -- --fix --staged"
    ],
    "*.{tsx,ts}": [
      "npm run lint:ts -- --fix --staged"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
